<h1>All Juanstocks Users</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First_name</th>
      <th>Last_name</th>
      <th>Email</th>
      <th>user_role</th>
      <th>user_status</th>
      <th>confirmed_at</th>
    </tr>

      <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %> </td>
      <td><%= user.first_name %> </td>
      <td><%= user.last_name %> </td>
      <td><%= user.email %> </td>
      <td><%= user.user_role %> </td>
      <td><%= user.user_status %> </td>
      <% if user.confirmed_at == nil   %>
      <td> Account not confirmed </td>
      <% else %>
      <td><%= user.confirmed_at %> </td>
      <% end %>
      <td><%= link_to 'Show', user_path(user.id) %></td>
      <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
      <td><%= button_to "x", user_path(user.id), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?' }, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
  </thead>