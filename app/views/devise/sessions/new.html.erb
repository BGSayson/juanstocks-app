<div class="<%= welcome_flex_col_container%>">
  <div class="<%= welcome_flex_row_container_top%> sticky top-0 right-0 left-0">
    <%= image_tag('icons/JuanStocksIcon.png', height:40, width:40) %>
  </div>
</div>

<%# turbo_frame_tag "modal" do%>
<div class="<%=devise_form_flex_col_container%> mt-[1rem]">
  <div class="<%=devise_form_parent_container%>">
    <h2 class="<%=admin_main_header%>">Log in</h2>
    <div class="<%=admin_divider%>"></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:devise_form_flex_col_container}) do |f| %>
      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :email, class: "text-[#454545]" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: admin_form_field %>
      </div>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: admin_form_field %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="<%=devise_form_label_tf_div%> flex flex">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-[1.5rem]">
        <%= f.submit "Log in", class: devise_form_buttons %>
      </div>
    <% end %>
    <%# button_to "Sign out", destroy_user_session_path, method: :delete  %>
    <%= render "devise/shared/links" %>
  </div>
</div>
<%# end %>