<%# turbo_frame_tag "modal" do%>
<div class="<%=admin_flex_col_container%> px-[1rem] mt-[1rem]">
  <h2 class="<%=admin_main_header%>">Log in</h2>
  <div class="<%=admin_divider%>"></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:admin_flex_col_container}) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: admin_form_field %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: admin_form_field %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: welcome_primary_button %>
    </div>
  <% end %>
  <%# button_to "Sign out", destroy_user_session_path, method: :delete  %>
  <%= render "devise/shared/links" %>
</div>
<%# end %>