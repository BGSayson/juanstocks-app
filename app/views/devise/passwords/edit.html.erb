<div class="<%=devise_form_flex_col_container%> px-[1rem] mt-[1rem]">
  <h2 class="<%=admin_main_header%>">Change your password</h2>
  <div class="<%=admin_divider%>"></div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:devise_form_flex_col_container,method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: admin_form_field %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: admin_form_field %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: welcome_primary_button %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>