<div class="<%= welcome_flex_col_container%>">
  <div class="<%= welcome_flex_row_container_top%> sticky top-0 right-0 left-0">
    <%= image_tag('icons/JuanStocksIcon.png', height:40, width:40) %>
  </div>
</div>

<div class="<%=devise_form_flex_col_container%> mt-[1rem]">
  <div class="<%=devise_form_parent_container%>">
    <h2 class="<%=admin_main_header%>">Sign up</h2>
    <div class="<%=admin_divider%>"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:devise_form_flex_col_container}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "First name", class: admin_form_field %>
      </div>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name", class: admin_form_field %>
      </div>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: admin_form_field %>
      </div>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em class="text-[1rem]">(at least <%= @minimum_password_length %> chars.)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: admin_form_field %>
      </div>

      <div class="<%=devise_form_label_tf_div%>">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: admin_form_field %>
      </div>

      <div class="actions text-[1.5rem]">
        <%= f.submit "Sign up", class: devise_form_buttons %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>