<div class="<%=admin_flex_col_container%> px-[1rem] mt-[1rem]">
  <h2 class="<%=admin_main_header%>">Resend confirmation instructions</h2>
  <div class="<%=admin_divider%>"></div>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {class:admin_flex_col_container, method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: admin_form_field %>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions", class: welcome_primary_button %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>