<%# STIMULUS TEST ELEMENTS %>
<div>

  <%# ALERT %>
  <div data-controller="alert">
      <button data-action="click->alert#show" style="color: red;">click me</button>
      <div data-action="click->alert#huh">huh me</div>
  </div>

  <%# GREETER (IMPORTANT FOR TX FORM!!!) %>
  <div data-controller="greeter">
    <input type="text" data-greeter-target="name">
    <button data-action="click->greeter#greet">Greet me </button>
    <div data-greeter-target="output"></div>
  </div>

  <%# COUNTER %>
  <div data-controller="counter"  data-counter-count-value="0">
    <div data-counter-target="output"></div>
    <button data-action="click->counter#addOne" style="color: blue;">click</button>
  </div>

  

</div>

